<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar" tools:ignore="NewApi">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_item_background_color</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- android transitions -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>
    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">

        <item
            name="android:progressDrawable">
            @drawable/abc_ratingbar_small_material
        </item>
        <item name="android:minHeight">25dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>
</resources>
