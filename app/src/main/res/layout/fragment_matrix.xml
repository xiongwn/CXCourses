<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhoubiao.cxcourses.MatrixActivity$PlaceholderFragment"
    >
    <TextView 
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="优化的对象"
        android:textSize="20sp"
        />
    <LinearLayout 
        android:id="@+id/selection1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title1"
        >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="类别"
          android:textSize="20sp"
          />  
      <Spinner 
       android:id="@+id/spinner_category_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:entries="@array/optimizCategory"
       />  
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="项目"
          android:textSize="20sp"
          />  
      <Spinner 
       android:id="@+id/spinner_item_1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />  
    </LinearLayout>
     <TextView 
         android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="劣化的对象"
        android:textSize="20sp"
        android:layout_below="@id/selection1"
        />
    <LinearLayout 
        android:id="@+id/selection2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/title2"
        >
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="类别"
          android:textSize="20sp"
          />  
      <Spinner 
       android:id="@+id/spinner_category_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:entries="@array/degradedCategory"
       />  
      <TextView 
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="项目"
          android:textSize="20sp"
          />  
      <Spinner 
       android:id="@+id/spinner_item_2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       />  
    </LinearLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/selection2"
         >
    <Button 

        android:layout_centerVertical="true"
        android:id="@+id/confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查看结果"
        />
    </RelativeLayout>

</RelativeLayout>
